<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<welcome-file-list>
		<!-- 首页 -->
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- webAppRootKey -->
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>nec.root</param-value>
	</context-param>
	
	<!-- ========== Log4j 监听器 ========== -->
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:Config/log4j/log4j.xml</param-value>
	</context-param>

	<!-- ========== spring 配置文件 ========== -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:Config/spring/applicationContext.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<!-- ========== struts ========== -->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>struts-default.xml,struts-plugin.xml,Config/struts/struts-config.xml</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- ========== 自启 servlet ==========
	<servlet>
		<servlet-name>ConstantServlet</servlet-name>
		<servlet-class>com.terren.nec.common.servlet.ConstantServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	 -->
	<!-- ========== session 超时 ========== -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
	
	<error-page>
		<error-code>404</error-code>
		<location>/page/common/error/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/page/common/error/500.jsp</location>
	</error-page>
</web-app>